        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.BodyType)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.BodyType)
            @Html.ValidationMessageFor(model => model.BodyType)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ModelNo)
        </div>
